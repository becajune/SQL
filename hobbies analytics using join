CREATE TABLE persons (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    age INTEGER);
    
INSERT INTO persons (id, name, age) 
VALUES 
("Bobby McBobbyFace", 12);
("Lucy BoBucie", 25);
("Banana FoFanna", 14);
("Shish Kabob", 20);
("Fluffy Sparkles", 8);
("Paisley Waisley",17);

CREATE table hobbies (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    person_id INTEGER,
    name TEXT);
    
INSERT INTO hobbies (person_id, name) 
VALUES 
(1, "drawing");
(2, "coding");
(3, "dancing");
(4, "coding");
(5, "skating");
(6, "rowing");

--1. used join to show persons hobbies by their name
SELECT persons.name, hobbies.name
FROM persons
JOIN hobbies
ON persons.id=hobbies.person_id;

--2. used join to only show hobbies of specific person
SELECT persons.name, hobbies.name
FROM persons
JOIN hobbies
ON persons.id=hobbies.person_id
WHERE persons.name=("Bobby McBobbyFace");

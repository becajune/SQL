--create bookstore database

CREATE TABLE bookstore (id INTEGER PRIMARY KEY AUTOINCREMENT, name TEXT, genre TEXT, sold INTEGER, price INTEGER);


INSERT INTO bookstore (name, genre, sold, price) VALUES ('Hester', 'retelling', 3, 18.30);
INSERT INTO bookstore (name, genre, sold, price) VALUES ('Her Dark Reflection', 'retelling', 6, 15.99);
INSERT INTO bookstore (name, genre, sold, price) VALUES ('Stealing Infiintiy', 'fantasy', 4, 13.25);
INSERT INTO bookstore (name, genre, sold, price) VALUES ('Set in Stone', 'historical_fiction', 2, 17.50);

--display amount sold
SELECT SUM(sold) FROM bookstore;

--display items ordered by price
SELECT * FROM bookstore ORDER BY price;

--what genre was the most popular
SELECT genre, MAX(sold) FROM bookstore;
